{
  "compilerOptions": {
    "strict": true,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
